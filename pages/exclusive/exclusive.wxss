/* pages/exclusive/exclusive.wxss */
.exclusive-content{
  width:100%;
}
.exclusive-add{
  width:100%;
  height:90rpx;
  background:#6dbff9;
  position: fixed;
  z-index: 1000;
}
.exclusive-add-icon{
  height:100%;
  width:230rpx;
  font-size:28rpx;
  line-height:98rpx;
  color:#fff;
  margin:0 auto;
  background:url('https://weixin1.haowaihao.com.cn/static/images/toolbar/exclusiveAdd.png') no-repeat left center/36rpx 36rpx;
}
.exclusive-add-icon text{
  float:right;
}
.exclusive-phone{
  font-size:28rpx;
  width:100%;
  height:86rpx;
  border-bottom:4rpx solid #dadada;
  position:fixed;
  z-index:1000;
  top:90rpx;
  background:#fff;
}
.exclusive-phone-word{
    width:100%;
    justify-content: center;
    line-height:85rpx;
    display:flex;
}
.exclusive-phone-word text{
    margin:0 auto;
    font-size:30rpx;
}
.exclusive-table {
  clear: both;
  border-left:1px solid #dadada;
  width: 100%;
  font-size:28rpx;
  padding-top:180rpx;
}
.exclusive-table scroll-view{
  height:950rpx;
}
.exclusive-table .tr {
  width: 100%;
  height:89rpx;
  display: flex;
  justify-content: center;
  line-height: 89rpx;
}
.exclusive-table .th,.exclusive-table .td {
  border-bottom: 1px solid #dadada;
  text-align: center;
  justify-content: center;
  width:100%;
  height:98%;
}
.exclusive-table .th {
  font-weight: 400;
  display: flex;
  font-size:24rpx;
}
.exclusive-table .tdChild-1{
  font-size:32rpx;
  color:#6dbff9;
  width:50%;
}
.exclusive-table .tdChild-2{
  font-size:30rpx;
}
.exclusive-table .tdChild-3{
  color:#e27f58;
}
.exclusive-table .thChild-1{
  width:50%;
}