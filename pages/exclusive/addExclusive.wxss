/* pages/exclusive/addExclusive.wxss */
.addExclusive-top{
  width:100%;
  height:220rpx;
  background:#6dbff9;
}
.addExclusive-top-search{
  padding-top:90rpx;
  padding-left: 50rpx;
  color: #fff;
}
.whole{
  width: 160rpx;
  height: 58rpx;
  float:left;
  line-height:60rpx;
  /* padding-left:70rpx; */
  text-align: center;
  font-size: 28rpx;
   border: 1px solid #fff; 
  margin: 0rpx 20rpx;
}
.addExclusive-top-search-input{
  border-left: 1px solid #fff;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #fff;
  width:350rpx;
  height:58rpx;
  float:left;
  padding-left:8rpx;
  color:#fff;
  font-size: 28rpx;
  margin-top: 1rpx;
}
.addExclusive-top-searchIcon{
  border-right: 1px solid #fff;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #fff;
  width:48rpx;
  height:58rpx;
  background:url('https://weixin1.haowaihao.com.cn/static/images/toolbar/searchExclusive.png') no-repeat center center;
  background-size:80% auto;
  float:left;
  margin-top: 1rpx;
}
.addExclusive-search-content{
  margin:60rpx;
  width:630rpx;
  border: 1rpx solid #cdcdcd;
  border-bottom: none;
}
.addExclusive-search-content .li{
  width:100%;
  height:70rpx;
  line-height: 70rpx;
  text-align: center;
  border-bottom:1rpx solid #cdcdcd;
  font-size: 28rpx;
}
.addExclusive-search-content text{
    float:left;
    width:100%;
    line-height:70rpx;
}
.addExclusive-search-content .selectLi{
  background:#6dbff9;
  color:#fff;
}
.addExclusive-button{
  width:100%;
  height:80rpx;
}
.addExclusive-button .confirm{
  height:100%;
  width:260rpx;
  background:#6dbff9;
  float:left;
  line-height: 80rpx;
  color:#fff;
  margin-left:60rpx;
  font-size: 30rpx;
}
.addExclusive-button .cancel{
  height:100%;
  width:260rpx;
  background:#bfc4c8;
  float:right;
  line-height: 80rpx;
  color:#fff;
  margin-right:60rpx;
  font-size: 30rpx;
}
.exclusive-content{
  position: relative;
}
.max-Region{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  /* display: none;   */
}
.Region{
  width: 80%;
  height: 75%;
  padding: 50rpx 40rpx;
  background: #fff;
  margin: 0 auto;
  position: absolute;
  top: 5%;
  left: 5%;
  border-radius: 20rpx;  
  display: flex;
}
.wai{
  width: 23.3%;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 10rpx;
  margin-bottom: 40rpx;
  float: left;
}
.shuju{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #6dbff9;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: #bfc4c8;
}