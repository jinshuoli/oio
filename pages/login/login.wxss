/* pages/login/login.wxss */

.login_top{
    width:100%;
    height:415rpx;
    background-image: url(https://weixin1.haowaihao.com.cn/static/images/login/bg.gif);
    background-color: #6dbffa;
    background-size: 100% auto;
    background-position: bottom;
    background-repeat: no-repeat;
    text-align: center;
}

.login_top image{
	width:164rpx;
	height:164rpx;
	margin-top:60rpx;
}
.login_top_text{ 
	width:100%;
	font-size:38rpx;
	color:#FFF;
	line-height:90rpx;
}

.login_form{
	width:100%;
	margin-top:70rpx;
	height:300rpx;
}
.login_form_input1{
     background:url(https://weixin1.haowaihao.com.cn/static/images/login/input_1.png);
 }
.login_form_input2{
    background:url(https://weixin1.haowaihao.com.cn/static/images/login/input_2.png);
}
.login_form_input1,.login_form_input2{
  margin:0 55rpx 50rpx 57rpx;
  width:640rpx;
	height:70rpx;
	-moz-box-shadow:0rpx 2rpx 20rpx #f2f2f2;
	-webkit-box-shadow:0rpx 2rpx 20rpx #f2f2f2;
	box-shadow:0rpx 2rpx 20rpx #f2f2f2;
	border-radius: 5rpx;
	background-repeat: no-repeat;
	background-size: auto 70%;
	background-position: 17rpx center;
}
.login_form_input1{
    margin-bottom: 50rpx;
}
.login_form_input1 input,.login_form_input2 input{
  margin-left:97rpx;
	height: 70rpx;
	line-height: 70rpx;
}
.login_form_input{
    font-size:30rpx;
    color:#757575;
    font-family: Microsoft YaHei;
}
.login_form_row3{
     margin:0 auto; 
    width:640rpx;
    height:65rpx;
    color:#757575;
}
.login_form_row3 text:nth-child(1){
    float: right;
    font-size:30rpx;
    line-height:65rpx;
}
.login_form_row3 text:nth-child(2){
    float: left;
    font-size:30rpx;
    line-height:65rpx;
}
.login_form_row4{
    margin:70rpx auto 0 auto;
    width:640rpx;
    height:80rpx;
    font-size:36rpx;
    background:#6dbffa;
    border-radius: 7rpx;
    color:#FFF;
    text-align:center;
    line-height:80rpx;
}