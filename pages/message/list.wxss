.message_write_bg{
    position:fixed;
    width:100%;
    height:100rpx;
    padding:20rpx 0 0 0;
    bottom:0;
    background:#FFFFFF;
    z-index:2;
}
.message_write{
    width:90%;
    margin:0 5% 10rpx 5%;
    min-height:80rpx;
    bottom:20rpx;
    left:0;
    background:#FFFFFF;
    border-radius: 6rpx;
    box-shadow: 0 0 40px #bababa;
}
.message_write input{
    float:left;
    height:80rpx;
    line-height:80rpx;
    width:79%;
    padding:0 0 0 6%;
}
.input_style{
    font-size:30rpx;
    color:#c2c2c2;
    line-height:80rpx;
}
.message_write_sub{
    float:right;
    width:15%;
    min-height:80rpx;
    line-height:80rpx;
    background:url("data:image/png;base64,") no-repeat center center;
    background-size:51rpx 51rpx;
}
.message_info{
    position:fixed;
    top:0;
    width:100%;
    height:90rpx;
    background:#6dbffa;
    color:#FFFFFF;
    font-size:28rpx;
    line-height:90rpx;
    text-align:center;
    z-index:2;
}
.main-box{
    padding:90rpx 0 120rpx 0;
}
.message_add{
    width:90%;
    margin:0 5% 20rpx 5%;
    position:fixed;
    bottom:0;
    left:0;
    height:80rpx;
    text-align:center;
    background:#fa7a6d;
    color:#FFF;
    font-size:30rpx;
    line-height:80rpx;
}
.message_add image{
    width:45rpx;
    height:35rpx;

    vertical-align:middle;
}
.message_one{
    width:94%;
    margin:20rpx 3% 0 3%;
}
.message_one_r1{
    width:100%;
    height:70rpx;
    text-align: center;
    font-size:26rpx;
    line-height:70rpx;
    color:#757575;
    position:relative;
}
.message_one_state{
    position:absolute;
    top:0;
    right:10rpx;
    width:150rpx;
    height:70rpx;
    line-height:70rpx;
    background:url("data:image/png;base64,") left center no-repeat;
    background-size:30rpx 30rpx;
    text-align: right;
}
.message_one_r2{
    width:530rpx;
    padding:15rpx 20rpx 20rpx 20rpx;
    line-height:40rpx;
    font-size:30rpx;
    color:#FFFFFF;
    background:#6dbffa;
}

.message_left{
    background:url("data:image/png;base64,") no-repeat;
    background-size:32rpx 11rpx;
}
.message_right{
    background:url("data:image/png;base64,") no-repeat;
    background-size:32rpx 11rpx;
}
.message_left{
     background-position: bottom left;
 }
.message_left .message_one_r2{
    float:left;
    margin:10rpx 14rpx;
    border-radius: 9rpx 9rpx 9rpx 0rpx;
}
.message_right{
    background-position: bottom right;
}
.message_right .message_one_r2{
    float:right;
    margin:10rpx 14rpx;
    border-radius: 9rpx 9rpx 0rpx 0rpx;
}