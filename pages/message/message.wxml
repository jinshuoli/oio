<view class="main-box">
    <view class="message_info" bindtap="messageAdd"><image src="data:image/png;base64,"></image>　写短信</view>
    <view class="message_area" wx:for="{{datas}}" wx:for-item="itemName" wx:key="" catchtap="oneLine" data-tel="{{itemName.peer_no}}">
        <view class="message_area_r1">{{itemName.name}} <text>{{itemName.send_time}}</text></view>
        <view class="message_area_r2 message_more">{{itemName.content}}</view>
    </view>
</view>