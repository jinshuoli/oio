
.message_info{
    width:100%;
    height:90rpx;
    background:#6dbffa;
    color:#FFFFFF;
    font-size:28rpx;
    line-height:90rpx;
    text-align:center;
    border-bottom: 20rpx solid #efefef;
}

.message_info image{
    width:25rpx;
    height:25rpx;
}

.message_area{
    width:90%;
    height:214rpx;
    border-bottom: 20rpx solid #efefef;
    padding:0 5%;
}
.message_area_r1{
    color:#757575;
    font-size:30rpx;
    line-height:55rpx;
    padding:20rpx 0 20rpx 0;
}
.message_area_r1 text{
    float:right;
}
.message_area_r2{
    width:93%;
    height:80rpx;
    padding:0 7% 0 0;
    font-size:30rpx;
    color:#5b5b5b;
    line-height:40rpx;
    background:url(data:image/png;base64,) no-repeat right center;
    background-size:20rpx 36rpx;
    overflow:hidden;
    position: relative;
    word-break: break-all;
}
.message_more::after{
    content:"...";
    z-index:2;
    position: absolute;
    right:50rpx;
    bottom: 0;
}

