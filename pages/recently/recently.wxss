.container {
  padding: 0 0;
}
.recentlyList {
  width:100%;
 
}

.recentlyDetail {
  height:100rpx;
  margin-top:10rpx;
  border-bottom:1px solid #e6e6e6;
}

.phoneOrName {
  width:300rpx;
  height:50rpx;
  float: left;
  font-size:30rpx;
  margin-top:10rpx;
  color:#383838;
  font-weight: bold;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}

.phoneOrName image {
  width:25rpx;
  height:25rpx;
  position: absolute;
  margin-top:10rpx;
  margin-left:-30rpx;
}

.callDuration {
  width:165rpx;
  height:50rpx;
  font-size:20rpx;
  float: left;
  margin-top:10rpx;
  margin-left:10rpx;
  color:#5c5c5c;
}

.monthAndDay {
  width:80rpx;
  height:50rpx;
  font-size:25rpx;
  text-align: right;
  float: right;
  margin-top:10rpx;
  margin-right:53rpx;
  color:#898989;
}

.phoneLocation {
  margin-top:55rpx;
  font-size:20rpx;
  position: absolute;
  color:#383838;
}

.minuteAndSecond {
  margin-top:52rpx;
  margin-left:557rpx;
  font-size:20rpx;
  position: absolute;
  color:#383838;
}

.phoneDiv{
  width: 90%;
  height: 120rpx;
  border-bottom: 1rpx solid #CBCBCB;
  position: relative;
  margin-left:10%; 

}
.recentlyImg{
  width: 30rpx;
  height: 30rpx;

}
.recently-address{
  width: 100%;
  height: 60rpx;
  border:1rpx solid red;
  font-size: 24rpx;
}
.recenty-one{
  padding: 5rpx;
  font-size:36rpx;
  margin-top:8rpx;
}
.recently-text{
  width: 30%;
  height: 100%;
  font-size:24rpx;
  float: left;
 
}
.recently-text-right{
  display: block;
 float: right;

}
.recently-text-down{
  position: absolute;
  right:26rpx;
  top:70rpx;
}
.recently-text-left{
  position: absolute;
  left:10rpx;
  top:70rpx;
}

.recently-img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: -45rpx;
  top:5rpx;
}